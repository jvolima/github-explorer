{
  "compilerOptions": {
    
    "lib": ["dom", "dom.iterable", "esnext"],   
    "allowJs": true,                                     
    "jsx": "react-jsx",                                
    "moduleResolution": "node",    
    "resolveJsonModule": true,      
    "isolatedModules": true,             
    "noEmit": true,                                   
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"]
}
